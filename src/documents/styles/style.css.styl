// Greys
light-grey   = #f0f0f0
dark-grey    = #818080

// Purples
light-purple = #3b458f
dark-purple  = #252c5d

// Reds
light-red    = #f14743
dark-red     = #c43a37
maroon       = #75201e

*
    box-sizing border-box

h1, h2, h3, h4, h5, h6
    margin 0

a
    color dark-red
    text-decoration none

.cf:before,
.cf:after
    content " "
    display table

.cf:after
    clear both

body
    background-color #eee
    font-family 'Avenir Next', 'allerregular', Arial, sans-serif
    -webkit-font-smoothing antialiased

.ribbon
    background-color light-red
    color #fff
    display inline-block
    font-family 'Rockwell'
    font-size 26px
    height 48px
    line-height 48px
    margin 20px 0 20px -39px
    padding 0 10px
    position relative
    text-align left
    min-width 206px
    z-index 1

.ribbon-shadow
    border-top 20px solid transparent
    border-bottom 20px solid transparent
    border-left 20px solid maroon
    bottom -27px
    height 0
    left 11px
    position absolute
    width 0
    z-index -1

    -webkit-transform rotate(-45deg)
    -moz-transform rotate(-45deg)
    -o-transform rotate(-45deg)
    -ms-transform rotate(-45deg)
    transform rotate(-45deg)

.ribbon-shadow-large
    border-top 28px solid transparent
    border-bottom 28px solid transparent
    border-left 28px solid maroon
    bottom -37px
    height 0
    left 15px
    position absolute
    width 0
    z-index 0

    -webkit-transform rotate(-45deg)
    -moz-transform rotate(-45deg)
    -o-transform rotate(-45deg)
    -ms-transform rotate(-45deg)
    transform rotate(-45deg)

form
    display block

    .row
        margin 10px 0

    input[type="email"], input[type="password"], input[type="text"]
        background-color #efefef
        border 0
        color #222
        display inline-block
        font-size 16px
        height 32px
        margin-right 8px
        padding 20px 10px
        outline none
        width 310px
        float left
        margin-top 23px

    input[type="text"].half
        margin-right 6px
        width 210px

    textarea
        background-color #efefef
        border 0
        color #222
        display inline-block
        font-size 16px
        line-height 20px
        min-height 132px
        margin-right 5px
        padding 4px 8px
        outline none
        width 430px

    button[type="submit"]
        background-color dark-red
        border 0
        color #fff
        display block
        height 48px
        padding 8px 12px
        width 210px

.wrapper
    position relative
    width 100%

.container
    background-color #fff
    margin 0 auto
    max-width 960px
    position relative

    header
        background-color #f4f4f4
        border-bottom 1px solid #e9e9e9
        height 100px
        position relative
        width inherit

    nav
        cursor default
        position absolute
        right 0
        top 36px
        width 410px

        a
            color #222
            cursor pointer
            display inline-block
            font-size 21px
            margin-right 34px
            font-weight 600

        a:hover
            border-bottom 3px solid red

#header-wrapper
    background-color dark-purple

#logo
    color #fff
    line-height 100px
    position relative

    a
        color #fff

#logo-name
    background-color dark-red
    display inline-block
    /*font-family 'Rockwell'*/
    font-size 26px
    height 56px
    line-height 56px
    margin-left -39px
    position relative
    text-align center
    width 216px

#logo-event
    background-color light-red
    display inline-block
    font-family 'Rockwell'
    font-size 26px
    height 56px
    line-height 56px
    text-align center
    width 320px

#content-wrapper

    .container
        padding 20px 10px 10px

/* Headings */

h1
    font-size 32px
    color #333
    font-weight 600
    letter-spacing -1px

h1.headline
    padding-top 20px

h2
    font-size 24px
    font-weight 500
    color #333
    text-align left

h3
    color #fff
    font-size 26px
    font-weight 600
    text-align center

h4
    font-size 28px
    weight 700
    color #fff

/* Sign Up Box */

.signup
    background-color #3b458f
    padding 55px 55px 100px 55px
    margin 40px 0

    h3
        margin-bottom 40px

.form-textinput
    margin-top 28px
    width 300px
    height 48px

#mc-embedded-subscribe-form
    margin 0 auto
    width 494px

    #mce-EMAIL
        border-radius 4px
        margin 0 20px 0 0

    .button
        background-color #ef4642 !important
        box-sizing border-box
        color #fff
        display inline-block
        font-weight 500
        height 42px
        padding 8px 25px
        text-align center
        border-bottom 2px solid #283065
        border-top none
        border-left none
        border-right none
        border-radius 4px
        font-size 19px
        letter-spacing 1px
        margin 0
        width 140px

.form-button:hover
    background-color #fe6b68

.form-button:active
    background-color #e13e3a
    border-top 2px solid #283065
    border-bottom none

.centered-content
    margin auto
    width 450px

/* Teams */

.box
    padding 40px 55px
    overflow hidden

.box p
    color #fff
    width 60%
    text-align justify

.right-content
    float right

.box.first
    background-image url('team-1st.png')
    background-color #3b458f
    background-repeat no-repeat
    background-position right
    margin-top 50px

.box.second
    background-color #767ba4
    background-image url('team-2nd.png')
    background-repeat no-repeat
    background-position left

.box.third
    background-color #a6abc9
    background-image url('team-3rd.png')
    background-repeat no-repeat
    background-position right

.box a
    color #fff

.box a:hover
    text-decoration underline
    color #f0f0f0

.team
    color #fff
    opacity .6
    text-transform uppercase
    font-size 12px
    letter-spacing 3px
    padding-bottom 30px
    display inline-block

.right-team
    width 60%
    display inline-block
    float right
    text-align right

#footer-wrapper
    color #999
    font-size 12px
    text-align center

    footer
        height 100px

        span
            line-height 100px

        a
            text-transform uppercase

        a:hover
            border-bottom: 2px solid #f0f0f0

        .email-link
            margin-left 40px
