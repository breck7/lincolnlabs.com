// Greys
light-grey   = #f0f0f0
dark-grey    = #818080

// Purples
light-purple = #3b458f
dark-purple  = #252c5d

// Reds
light-red    = #f14743
dark-red     = #c43a37
maroon       = #75201e

*
    box-sizing border-box

h1, h2, h3, h4, h5, h6
    margin 0

a
    color dark-red
    text-decoration none

.cf:before,
.cf:after
    content " "
    display table

.cf:after
    clear both

body
    background-color #eee
    font-family 'Open Sans', Avenir Next', 'allerregular', Arial, sans-serif
    -webkit-font-smoothing antialiased

.ribbon
    background-color light-red
    color #fff
    display inline-block
    font-family 'Rockwell'
    font-size 26px
    height 48px
    line-height 48px
    margin 20px 0 20px -39px
    padding 0 10px
    position relative
    text-align left
    min-width 206px
    z-index 1

.ribbon-shadow
    border-top 20px solid transparent
    border-bottom 20px solid transparent
    border-left 20px solid maroon
    bottom -27px
    height 0
    left 11px
    position absolute
    width 0
    z-index -1

    -webkit-transform rotate(-45deg)
    -moz-transform rotate(-45deg)
    -o-transform rotate(-45deg)
    -ms-transform rotate(-45deg)
    transform rotate(-45deg)

.ribbon-shadow-large
    border-top 28px solid transparent
    border-bottom 28px solid transparent
    border-left 28px solid maroon
    bottom -37px
    height 0
    left 15px
    position absolute
    width 0
    z-index 0

    -webkit-transform rotate(-45deg)
    -moz-transform rotate(-45deg)
    -o-transform rotate(-45deg)
    -ms-transform rotate(-45deg)
    transform rotate(-45deg)

form
    display block

    .row
        margin 10px 0

    input[type="email"], input[type="password"], input[type="text"]
        background-color #efefef
        border 0
        color #222
        display inline-block
        font-size 16px
        height 32px
        margin-right 5px
        padding 4px 8px
        outline none
        width 430px

    input[type="text"].half
        margin-right 6px
        width 210px

    textarea
        background-color #efefef
        border 0
        color #222
        display inline-block
        font-size 16px
        line-height 20px
        min-height 132px
        margin-right 5px
        padding 4px 8px
        outline none
        width 430px

    button[type="submit"]
        background-color dark-red
        border 0
        color #fff
        display block
        height 48px
        padding 8px 12px
        width 210px

.wrapper
    position relative
    width 100%

.container
    background-color #fff
    margin 0 auto
    max-width 960px
    position relative

    header
        background-color #f4f4f4
        border-bottom 1px solid #e9e9e9
        height 100px
        position relative
        width inherit

    nav
        cursor default
        position absolute
        right 0
        top 36px
        width 400px

        a
            color #222
            cursor pointer
            display inline-block
            font-size 14px
            margin-right 14px

#header-wrapper
    background-color dark-purple

#logo
    color #fff
    line-height 100px
    position relative

    a
        color #fff

#logo-name
    background-color dark-red
    display inline-block
    font-family 'Rockwell'
    font-size 26px
    height 56px
    line-height 56px
    margin-left -39px
    position relative
    text-align center
    width 216px

#logo-event
    background-color light-red
    display inline-block
    font-family 'Rockwell'
    font-size 26px
    height 56px
    line-height 56px
    text-align center
    width 320px

#content-wrapper

    .container
        padding 20px 10px 10px

h1
    font-size 36px
    color #333
    font-weight 600

h2
    font-size 24px
    font-weight 600
    color #333

h4
    font-size 28px
    weight 700
    color #fff

.box
    padding 55px

.box.first
    background-color #3b458f

.box.second
    background-color #767ba4

.box.third
    background-color #a6abc9

.team
    color 255,255,255,.5
    text-transform uppercase
    font-size 12px

#footer-wrapper
    color #999
    font-size 12px
    text-align center

    footer
        height 100px

        span
            line-height 100px
